<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.habhab.CategoryActivity">

    <TextView
        android:id="@+id/tvProductListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        android:paddingBottom="@dimen/common_padding"
        android:paddingTop="@dimen/common_padding"
        android:text="@string/product_list"
        android:textAllCaps="true"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp" />

    <ListView
        android:id="@+id/lvCategory"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/tvProductListHeader"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/onlineshoppingm1"
        android:contentDescription="@string/imageheader" />

    <TextView
        android:id="@+id/tvHandB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/h_and_b_shop"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:targetApi="jelly_bean"
        android:layout_above="@+id/tvKategoriHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <TextView
        android:id="@+id/tvKategoriHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvProductListHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/kategori"
        android:textSize="30sp"
        android:theme="@style/Base.TextAppearance.AppCompat.Title.Inverse" />

</RelativeLayout>
